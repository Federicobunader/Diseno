        <button type="submit" class="button button-back" onclick="window.location.href='/reiniciar_egreso'">VOLVER ATRAS</button>

        <div class="form">

            <div id="compra">

                <h2>Agregue los productos de su egreso</h2>

                <h3>Visualice los productos de GESOC</h3>

                <div class="lupa"> <img src="https://i.ibb.co/6Zc8sfp/lupa.png" alt="alternatetext"></div>
                <div class="buscar">
                    <input type="text" id="unProducto" onkeyup="buscarProducto()" placeholder="Busca por nombre"
                           title="Type in a name">
                </div>

                <form class="" action="/guardar_item_egreso" method="post" style="">
                    <div id="div1">

                        <table class="scroll" id="tablaProductos" style="overflow-y:auto;">

                            <thead>
                            <th><i class="fas fa-user"></i> Id Producto</th>
                            <th><i class="fas fa-phone"></i> Nombre Producto</th>
                            <th><i class="fas fa-id-card-alt"></i> Descripción del Producto</th>
                            <th><i class="fas fa-user-cog"></i> Precio</th>
                            <th><i class="fas fa-envelope"></i> Id Proveedor</th>
                            <th><i class="fas fa-envelope"></i> Nombre Proveedor</th>
                            </thead>

                            <tbody>
                            {{#each productos}}
                                <tr>
                                    <td><i class="fas fa-user"></i> {{id}}</td>
                                    <td>{{nombre}}</td>
                                    <td>{{descripcion}}</td>
                                    <td>{{precio}}</td>
                                    <td>{{proveedor.id}}</td>
                                    <td>{{proveedor.nombre}}</td>

                                </tr>
                            {{/each}}
                            </tbody>


                        </table>
                    </div>

                    <h3>Indique los datos correspondientes al Producto</h3>

                    <div class="top-row">
