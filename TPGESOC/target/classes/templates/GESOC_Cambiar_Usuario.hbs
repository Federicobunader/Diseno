<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Modificar usuario</title>
  <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
  <link rel="stylesheet" href="/css/GESOC_Cambiar_Usuario.css">

</head>

<body>

  <nav class="navbar navbar-default navbar-fixed-top navbar-shrink">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header page-scroll">
        <a class="navbar-brand page-scroll" href="/menu_logueado">GESOC</a>
      </div>
    </div>
  </nav>



  <!-- partial:index.partial.html -->
  <div class="form">

    <button type="submit" class="button button-back" onclick="window.location.href='/menu_logueado'">Volver al menú
      principal</button>

    <div>
      <div id="signup">

        <h1>Edite los campos deseados</h1>

        <form class="" {{#if usuario}} action="/cambiar_usuario/{{usuario.id}}" method="post" {{else}}
          action="/cambiar_usuario" method="post" {{/if}} style="">
          <!--
          <h2>Datos de la empresa</h2>
          
          <div class="top-row">
            <div class="field-wrap">
              <label>Nombre Ficticio</label>
                <input type="text" required autocomplete="off" id="NombreFicticio" name= "NombreFicticio" placeholder="Nombre Ficticio" {{#if empresa}}value="{{empresa.NombreFicticio}}" {{/if}}>
            </div>

            <div class="field-wrap">
              <label>Razón social</label>
               <input type="email" required autocomplete="off" id="RazonSocial" name="RazonSocial" placeholder="Razon social" {{#if empresa}}value="{{empresa.RazonSocial}}" {{/if}}>
            </div>
          </div>

          -->

          <h2>Datos del usuario</h2>

          <div class="field-wrap">
            <label>Nombre de usuario</label>
            <input type="text" required autocomplete="off" id="NombreDeUsuario" name="usuario"
              placeholder="Nombre de usuario" {{#if usuario}}value="{{usuario.usuario}}" {{/if}}>
          </div>

          <div class="field-wrap">
            <label>Email</label>
            <input type="email" required autocomplete="off" id="Email" name="mail" placeholder="Email"
              {{#if usuario}}value="{{usuario.mail}}" {{/if}}>
          </div>

          {{#if falloAlRegistrarse}}
          <div class="alert alert-danger" role="alert">
            La contraseña no cumple con los requisitos
          </div>
          {{/if}}

          <div class="field-wrap">
            <label>Contraseña</label>
            <input type="password" required autocomplete="off" id="password" name="password" placeholder="Contraseña">
          </div>

          <h2>Dirección</h2>

          <div class="top-row">
            <div class="field-wrap">
              <label>Calle</label>
              <input type="text" required autocomplete="off" id="calle" name="calle" placeholder="Calle" {{#if usuario}}
                value="{{usuario.direccionPostal.calle}}" {{/if}}>
            </div>

            <div class="field-wrap">
              <label>Altura</label>
              <input type="text" required autocomplete="off" id="altura" name="altura" placeholder="Altura"
                {{#if usuario}} value="{{usuario.direccionPostal.altura}}" {{/if}}>
            </div>
          </div>

          <div class="top-row">
            <div class="field-wrap">
              <label>Piso</label>
              <input type="text" required autocomplete="off" id="piso" name="piso" placeholder="Piso" {{#if usuario}}
                value="{{usuario.direccionPostal.piso}}" {{/if}}>
            </div>

            <div class="field-wrap">
              <label>Departamento</label>
              <input type="text" required autocomplete="off" id="departamento" name="departamento"
                placeholder="Departamento" {{#if usuario}}value="{{usuario.direccionPostal.departamento}}" {{/if}}>
            </div>
          </div>

          <div class="top-row">
            <div class="field-wrap">
              <label>País</label>
              <input type="text" required autocomplete="off" id="pais" name="pais" placeholder="País"
                {{#if usuario}}value="{{usuario.direccionPostal.pais}}" {{/if}}>
            </div>

            <div class="field-wrap">
              <label>Provincia</label>
              <input type="text" required autocomplete="off" id="provincia" name="provincia" placeholder="Provincia"
                {{#if usuario}}value="{{usuario.direccionPostal.provincia}}" {{/if}}>
            </div>
          </div>

          <div class="field-wrap">
            <label>Ciudad</label>
            <input type="text" required autocomplete="off" id="ciudad" name="ciudad" placeholder="Ciudad"
              {{#if usuario}}value="{{usuario.direccionPostal.ciudad}}" {{/if}}>
          </div>

          <button type="submit" id="myBtn" class="button button-back" onclick="verify()">Guardar cambios</button>

        </form>

      </div>

    </div>
    <div id="myModal" class="modal">

      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <p>Sus datos fueron actualizados con éxito</p>
        <button type="mybtn" class="button button-modal" onclick="window.location.href='/menu_logueado'">OK</button>
      </div>
    </div>

  </div>

  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
  <script src="/js/GESOC_Cambiar_Usuario.js"></script>

  <script>
    var modal = document.getElementById("myModal");

    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks the button, open the modal 
    btn.onclick = function () {
      modal.style.display = "block";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
      modal.style.display = "none";
      window.location.href = '/menu_logueado'
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
      if (event.target == modal) {
      }
    }
  </script>

</body>

</html>